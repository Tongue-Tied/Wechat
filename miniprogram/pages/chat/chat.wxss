/* miniprogram/pages/chat/chat.wxss */
.input_box {
  position: fixed;
  width: 100%;
  height: 60px;
  left: 0;
  bottom: 0;
  background: rgb(236, 236, 236);
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.input_box input {
  background: rgb(255, 255, 255);
  display: flex;
  height: 75%;
  width: 80%;
  margin-left: 10px;
  padding-left: 5px;
  border-radius: 4px;
}
.input_box view {
  width: 15%;
  height: 75%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgb(212, 105, 105);
  border-radius: 4px;
}
.scroll_view{
  padding-bottom: 60px;
}
.sv_box {
  display: flex;
  width: 100%;
  min-height: 50px;
  align-items: center;
  margin: 20px 0 20px 10px;
  position: relative;
}
.sv_active{
  flex-direction: row-reverse;
  margin: 0;
  margin: 20px 0px 20px -10px;
}
.sv_active .msg{
  margin-right: 20px;
  position: relative;
}
.sv_box .avatar{
  display: flex;
  align-items: center;
}
.sv_box .avatar image {
  width: 45px;
  height: 45px;
  border-radius: 5px;
}
.sv_box .msg{
  min-height: 50px;
  display: flex;
  align-items: center;
  max-width: 60%;
  word-break: break-all;
  background: rgba(22, 204, 22, 0.733);
  border-radius: 5px;
  margin-left: 20px;
  padding:0px 10px 0px 10px;
}
 .arrow{
  width: 10px;
  height: 10px;
  background: #000;
  position: absolute;
  right: 0px;
}
.box{
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%);
}